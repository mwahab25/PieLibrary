@model IEnumerable<Publisher>
    @{ Layout = "_Layout"; ViewBag.Title = "All Publishers";}

<h2>All Authors</h2>
<a asp-action="Create" class="btn btn-sm btn-primary">Add Publisher</a>
    <a asp-action="GetPublisher" class="btn btn-sm btn-secondary">Get Publisher</a>

    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model)
            {
                <tr>
                    <td>@r.PublisherId</td>
                    <td>@r.PublisherName</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@r.PublisherId">Edit</a>
                        <a asp-action="Details" asp-route-id="@r.PublisherId">Details</a>
                        <a asp-action="Delete" asp-route-id="@r.PublisherId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
