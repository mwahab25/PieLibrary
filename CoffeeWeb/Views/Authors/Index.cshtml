@model IEnumerable<Author>
    @{ Layout = "_Layout"; ViewBag.Title = "All Authors";}

<h2>All Authors</h2>
    <a asp-action="Create" class="btn btn-sm btn-primary">Add Author</a>
    <a asp-action="GetAuthor" class="btn btn-sm btn-secondary">Get Author</a>

    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model)
            {
                <tr>
                    <td>@r.AuthorId</td>
                    <td>@r.AuthorName</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@r.AuthorId">Edit</a>
                        <a asp-action="Details" asp-route-id="@r.AuthorId">Details</a>
                        <a asp-action="Delete" asp-route-id="@r.AuthorId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
